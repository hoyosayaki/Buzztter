<%= link_to "キャンセル" , posts_path %>
<!--<input type="button" value="下書き">-->

<%= form_with model: @post do |f| %>

<%= f.text_area :description,placeholder: "いまどうしてる？" %>

<%= f.fields_for :like, @post.like do |l| %>
    <%= l.hidden_field :likes, :value => 100 %>
<% end %>

<%= f.submit "ツイート" %>

<% end %>